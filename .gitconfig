	email = frederikgalle@fastmail.fm
	name = Frederik Galle
[color]
	ui = auto
[color "branch"]
  current = green
  local = yellow
  remote = yellow reverse
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green
  commit = yellow
  whitespace = normal red
[color "status"]
  added = green
  changed = yellow
  unchanged = cyan
  untracked = red
  nobranch = red
[color "interactive"]
  header = yellow
  help = red
  prompt = blue
[alias]
	co = checkout

  # Add to staging area
  a  = add
  ap = add --patch
  patch = add --patch

  # Commit
  c  = commit --verbose
  cm = commit --verbose -m
  amend = commit --amend --verbose

  # Unstage the changes to some files
  unstage = reset HEAD --

  # Undo the last commit
  undo = reset "HEAD^"

  # Short and verbose statuses
  s  = status --short --branch
  sv = status

  # Overview of branches
  b   = branch
  bl  = branch --verbose
  bla = branch --verbose --all

  # When merging
  ours = checkout --ours --
  theirs = checkout --theirs --

  # Show details of last commit
  details = log -n1 -p --format=fuller

  # Show list of changes between two commits
  changes="!f() { git log --pretty=format:'* %s' $1..$2;  }; f"

  # Overview of history
  ls = log --pretty=format:"%C(yellow)%h\\ %Cred%d\\ %Creset%s\\ %C(bold\\ blue)<%cn>%Creset" --decorate --graph
  lsd = log --pretty=format:"%C(yellow)%h\\ %Cgreen%ad%Cred%d\\ %Creset%s\\ %C(bold\\ blue)<%cn>%Creset" --decorate --graph --date=short
  ll = log --pretty=format:"%C(yellow)%h\\ %Cred%d\\ %Creset%s\\ %C(bold\\ blue)<%cn>%Creset%n" --decorate --numstat --graph
  lld = log --pretty=format:"%C(yellow)%h\\ %Cred%d\\ %Creset%s\\ %Cgreen(%ad)\\ %C(bold\\ blue)<%cn>%Creset%n" --decorate --graph --numstat --date=short

  # Show files that are being ignored due to git update-index --assume-unchanged
  ignored = !git ls-files -v `git rev-parse --show-toplevel` | grep "^[a-z]"

  # Remove deleted files
  r = !git ls-files -z --deleted | xargs -0 git rm

  # List all tags
  tags = tag -l

  # list aliases
  alias = "!git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort | column -t -s $'\\t'"
[core]
	editor = vim
	quotepath = false
	excludesfile = ~/.gitignore
	autocrlf = input
[push]
	default = upstream
[help]
	autocorrect = 1
[diff]
	algorithm = patience
	mnemonicprefix = true
	renames = copies
[url "git@github.com:"]
	insteadOf = gh:
[url "git@bitbucket.org:"]
  insteadOf = bb
[rebase]
	autosquash = true
